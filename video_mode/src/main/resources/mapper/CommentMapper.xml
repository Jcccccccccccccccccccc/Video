        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp.mapper.CommentMapper">

    <resultMap id="BaseResultMap" type="com.sp.pojo.Comment">
            <id property="commentId" column="comment_id" jdbcType="INTEGER"/>
            <result property="nickName" column="nickname" jdbcType="VARCHAR"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="videoId" column="video_id" jdbcType="INTEGER"/>
            <result property="commentTime" column="comment_time" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        comment_id,nickname,avatar_url,
        content,video_id
    </sql>
</mapper>
